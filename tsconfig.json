{
  "compilerOptions": {
    "module": "commonjs",
    "moduleResolution": "node",
    "target": "ES2019",
    "allowJs": true,
    "skipLibCheck": true,
    "outDir": "dist/",
    "esModuleInterop": true,
    "declaration": true,
    "declarationDir": "./types",
    "sourceMap": false,
    "lib": ["ESNext", "dom"],
    "types": [
      "node",
      "@types/node",
      "@types/mkdirp"
    ],
    "strict": true
  },
  "include": ["src/*"],
  "exclude": [
    "node_modules",
    "plugins"
  ]
}
